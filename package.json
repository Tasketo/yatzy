{
  "name": "yatzy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "tsc --noEmit && eslint .",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "playwright:install": "playwright install --with-deps",
    "lint:fix": "npm run lint --fix",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "coverage:merge": "nyc merge coverage/playwright coverage/coverage-final.json",
    "coverage:report": "nyc report --reporter=html --report-dir=coverage/html --temp-dir=coverage",
    "coverage:html": "npm run coverage:merge && npm run coverage:report"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "framer-motion": "^12.18.1",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "istanbul-reports": "^3.1.7",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vite-plugin-istanbul": "^7.0.0"
  }
}
